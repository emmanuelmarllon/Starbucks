generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model Produto {
  id          String   @id @map("_id") @default(auto()) @db.ObjectId
  name        String
  description String
  price       Float
  tags        String[]
  image       String?
  info        Info[]
}

type Info {
  label String
  value String
}


